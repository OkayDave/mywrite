<div class="row">
  <div class="col-md-12">
    <article>
      <h1><%= @article.subject %></h2>
      <hr />
      <section class="article-body">
        <%= @article.body %>
      </section>
      <hr />
      <section class="article-comments">
        <h3>Comments</h3>

        <div class="row">
          <div class="col-md-6">
            <%= render partial: "comments/comment", collection: @article.comments[0..-2] %>
          </div>
          <div class="col-md-5 col-md-offset-1">
            <%= render partial: "comments/form" %>
          </div>
        </div>
      </section>



    </article>

  </div>

</div>
